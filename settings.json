{
    /* https://github.com/github/gitignore */
    "editor.accessibilitySupport": "off",
    "editor.cursorWidth": 3,
    "editor.find.autoFindInSelection": "multiline",
    "editor.fontFamily": "PlemolJP, Cascadia Mono, BIZ UDGothic, UD デジタル 教科書体 N-R, Consolas, Courier New, monospace",
    "editor.guides.bracketPairs": "active",
    "editor.minimap.enabled": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "explorer.excludeGitIgnore": true,
    "extensions.ignoreRecommendations": true,
    "search.mode": "newEditor",
    "search.searchOnType": false,
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "none",
    "workbench.colorTheme": "Tomorrow Night Bright",
    "workbench.editor.enablePreview": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.startupEditor": "none",
    "editor.tokenColorCustomizations": {
        "[Monokai Dimmed]": {
            "textMateRules": [
                {
                    "scope": "meta.paragraph.markdown",
                    "settings": {
                        "foreground": "#F8F8F8"
                    }
                }
            ]
        },
        "[Quiet Light]": {
            "textMateRules": [
                {
                    "scope": "meta.paragraph.markdown",
                    "settings": {
                        "foreground": "#030303"
                    }
                }
            ]
        },
        "textMateRules": [
            {
                "scope": "markup.strikethrough",
                "settings": {
                    "foreground": "#AAAAAA",
                    "fontStyle": "strikethrough"
                }
            },
            {
                "scope": "punctuation.definition.heading.markdown",
                "settings": {
                    "fontStyle": "bold italic"
                }
            },
            {
                "scope": "punctuation.definition.list.begin.markdown",
                "settings": {
                    "foreground": "#E4007F",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "punctuation.definition.quote.begin.markdown",
                "settings": {
                    "foreground": "#4CBF99",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "markup.inline.raw.string.markdown",
                "settings": {
                    "foreground": "#ED9366"
                }
            },
            {
                "scope": "variable.language.this.cpp",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    "[c]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false,
        "files.autoGuessEncoding": false,
        "files.encoding": "shiftjis"
    },
    "[cpp]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false,
        "files.autoGuessEncoding": false,
        "files.encoding": "shiftjis"
    },
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": true,
        "editor.insertSpaces": false,
        "editor.detectIndentation" :false
    },
    "C_Cpp.debugShortcut": false,
    "C_Cpp.default.browse.databaseFilename": "${env:TEMP}/vscode-cpptools",
    "C_Cpp.default.intelliSenseMode": "windows-msvc-x86",
    "C_Cpp.intelliSenseCachePath": "${env:TEMP}/vscode-cpptools",
    "vscodemacros.macroFilePath": "{VSCODE_PORTABLE}\\user-data\\User\\macros.js",
    "vscodemacros.userMacroCommands": [
        {
            "path": "{VSCODE_PORTABLE}/user-data/User/macros.js",
            "name": "MarkdownTodoToggle"
        },
        {
            "path": "{VSCODE_PORTABLE}/user-data/User/macros.js",
            "name": "MarkdownStrikeThrough"
        },
        {
            "path": "{VSCODE_PORTABLE}/user-data/User/macros.js",
            "name": "MarkdownPasteWithBlockQuote"
        },
        {
            "path": "{VSCODE_PORTABLE}/user-data/User/macros.js",
            "name": "AlignTexts"
        }
    ],
}
